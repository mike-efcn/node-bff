{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2017", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2020"
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "dist"]
}
